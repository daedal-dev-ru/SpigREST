        <plugin.authme.version>5.6.0-SNAPSHOT</plugin.authme.version>
        <plugin.betonquest.version>2.0.0-SNAPSHOT</plugin.betonquest.version>
        <plugin.coreprotect.version>21.3</plugin.coreprotect.version>
        <plugin.combatlogx.version>11.2-SNAPSHOT</plugin.combatlogx.version>
