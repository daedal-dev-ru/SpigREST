        <plugin.skinsrestorer.version>14.2.8</plugin.skinsrestorer.version>
        <plugin.spark.version>0.1-SNAPSHOT</plugin.spark.version>
        <plugin.tradesystem.version>v2.2.0</plugin.tradesystem.version>
        <plugin.towny.version>0.98.5.0</plugin.towny.version>
